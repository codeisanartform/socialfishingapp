<!DOCTYPE html>
<html>
<head>
  <title>Fish Pages</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="navbar-inner">
		<div class="container">
	 		<ul class="nav navbar-header">
	 			
	 			<li style="list-style:none;"><a href="<%= root_path %>" class="navbar-brand">
	 			<%= image_tag("logo.png") %></a></li>
	 			<% if user_signed_in? %>
	 				<li> <%= link_to "All Catches", feed_path %> </li>
	 			<% end %>
	 		</ul>
	 		<ul class="nav pull-right">
	 			<% if user_signed_in? %>
		 			<li class="dropdown">
  						<a class="dropdown-toggle" id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="/page.html">
    						<%= current_user.full_name %> <b class="caret"></b>
    					</a>
	  					<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
	  						<li> <%= link_to "Edit Account", edit_user_registration_path %> </li>
			 				<li> <%= link_to "Log out", logout_path %> </li>
	  					</ul>
  					</li>
  				<% else %>
  					<li> <%= link_to "Register", register_path %> </li>
  					<li> <%= link_to "Log in", login_path %> </li>

					<% end %>
				</ul>
	 	</div>
	 </div>
	</nav>
<div class="container">

	<% flash.each do |type, message| %>
		<div class="alert <%= flash_class type %>"> 
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<%= message %>
		</div>
	<% end %>

	<%= yield %>
</div>
<div id="footer">
  <div class="container">
    <p class="muted credit">Brad Beltowski | Hugo Lacerda | Joshua Jorgensen - Â© 2013</p>
  </div>
</div>
</body>
</html>
