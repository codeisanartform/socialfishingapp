<h2 class="form-signin-heading">Sign Up Now</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=> {class:'form-signin simple_form_register'}) do |f| %>
<%= devise_error_messages! %>

<div class="form-group">
  <%= f.text_field :first_name, :class=>'form-control', :placeholder => "First Name" %>
</div>
<!--
<div><%= f.label :first_name %><br/>
  <%= f.text_field :first_name %></div>
-->

<div class="form-group">
  <%= f.text_field :last_name, :class=>'form-control', :placeholder => "Last Name" %>
</div>
<!--
<div><%= f.label :last_name %><br/>
  <%= f.text_field :last_name %></div>
-->

<div class="form-group">
  <%= f.text_field :profile_name, :class=>'form-control', :placeholder => "Username" %>
</div>
<!--
<div><%= f.label :profile_name %><br/>
  <%= f.text_field :profile_name %></div>
-->

<div class="form-group">
  <%= f.text_field :email, :class=>'form-control', :placeholder => "Email" %>
</div>
<!--
<div><%= f.label :email %><br />
<%= f.email_field :email, :autofocus => true %></div>
-->
<div class="form-group">
  <%= f.password_field :password, :class=>'form-control', :placeholder => "Password" %>
</div>
<!--
<div><%= f.label :password %><br />
<%= f.password_field :password %></div>
-->

<div class="form-group">
  <%= f.password_field :password_confirmation, :class=>'form-control', :placeholder => "Confirm Password" %>
</div>
<!--
<div><%= f.label :password_confirmation %><br />
<%= f.password_field :password_confirmation %></div>
-->

<%= f.submit "Sign Up", :class=>'btn btn-lg btn-primary btn-block' %>

<% end %>

<%= render "devise/shared/links" %>
