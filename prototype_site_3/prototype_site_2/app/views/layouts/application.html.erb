<!DOCTYPE html>
<html>
<head>
  <title>Fishingapp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
          

	<nav class="navbar navbar-default navbar-fixed-top">
		 <div class="container">
	        <div class="navbar-header">
	            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
	              <span class="icon-bar"></span>
	              <span class="icon-bar"></span>
	              <span class="icon-bar"></span>
	            </button>
		 			<a href="<%= root_path %>" class="navbar-brand"> Fishing App</a>
		 	</div>
		 		<div class="collapse navbar-collapse">
		 		<ul class="nav navbar-nav">
		 		<li> <%= link_to "Register", register_path %> </li>
		 			<% if user_signed_in? %>
		 				<li> <%= link_to "All Statuses", feed_path %> </li>
		 			<% end %>
		 		</ul>
		 		<ul class="nav navbar-right">
		 			<% if user_signed_in? %>
			 			<li class="dropdown">
	  						<a class="dropdown-toggle" id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="/page.html">
	    						<%= current_user.full_name %> <b class="caret"></b>
	    					</a>
		  					<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
		  						<li> <%= link_to "Edit Account", edit_user_registration_path %> </li>
				 				<li> <%= link_to "Log out", logout_path %> </li>
		  					</ul>
	  					</li>
	  				<% else %>
	  				 <!-- <div class="collapse navbar-collapse"> -->
	  					<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "navbar-form navbar-right"}) do |f| %>
				            <div class="form-group">
				               <%= f.input :email, input_html: { class: 'form-control' },  placeholder: 'email' %>
				            </div>
				            <div class="form-group">
				              <input type="password" placeholder="Password" class="form-control">
				            </div>
				            <button type="submit" class="btn btn-success">Sign in</button>
				        </form>
				        <% end %>
				     <!-- </div> -->
  					<% end %>
  				</div><!--/.nav-collapse -->
  				</ul>
		 	</div>
		 </div>
	</nav>
<div class="container">

	<% flash.each do |type, message| %>
		<div class="alert <%= flash_class type %>"> 
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<%= message %>
		</div>
	<% end %>

	<%= yield %> <!-- where all the views go -->
</div>
</body>
</html>
